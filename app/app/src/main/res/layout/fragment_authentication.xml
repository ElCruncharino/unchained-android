<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View"/>
        <variable name="listener" type="com.github.livingwithhippos.unchained.authentication.view.ButtonListener" />
        <variable
            name="auth"
            type="com.github.livingwithhippos.unchained.authentication.model.Authentication" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvPlease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_go"
            app:layout_constraintBottom_toTopOf="@+id/tvLink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tvLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{auth.verificationUrl}"
            android:autoLink="web"
            app:layout_constraintBottom_toTopOf="@+id/tvInsert"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPlease" />

        <TextView
            android:id="@+id/tvInsert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insert_code"
            app:layout_constraintBottom_toTopOf="@+id/tvCode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLink" />

        <TextView
            android:id="@+id/tvCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{auth.userCode}"
            app:layout_constraintBottom_toTopOf="@+id/bCopy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvInsert" />

        <Button
            android:id="@+id/bCopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/copy_code"
            android:visibility="@{auth.userCode == null ? View.GONE : View.VISIBLE}"
            android:onClick="@{() -> listener.onCopyClick(auth.userCode)}"
            app:layout_constraintBottom_toTopOf="@+id/tvOrVisit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCode" />

        <TextView
            android:id="@+id/tvOrVisit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/or_visit"
            android:visibility="@{auth.directVerificationUrl == null ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toTopOf="@+id/tvDirectLink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bCopy" />

        <TextView
            android:id="@+id/tvDirectLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{auth.directVerificationUrl}"
            android:visibility="@{auth.directVerificationUrl == null ? View.GONE : View.VISIBLE}"
            android:autoLink="web"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvOrVisit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>